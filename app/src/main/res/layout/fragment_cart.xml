<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_50"
    tools:context=".ui.fragments.CartFragment">

    <TextView
        android:id="@+id/textView2"
        style="@style/TitlesH1Brown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi carrito de compras"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/pay_mod_app_default_padding"
        android:layout_marginLeft="@dimen/pay_mod_app_default_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@color/gray_50"
        android:layout_marginLeft="@dimen/pay_mod_app_default_padding"
        android:layout_marginRight="@dimen/pay_mod_app_default_padding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/textView_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:listitem="@layout/item_cart_row" />

    <TextView
        android:id="@+id/textView_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
        android:text="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rv_cart"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>